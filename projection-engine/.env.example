# SlipSmith Projection Engine Configuration

# Server
PORT=3001
DB_PATH=./data/slipsmith.db

# Use mock data for testing (set to 'true' to use mock data without APIs)
USE_MOCK_DATA=false

# ============================================================================
# Firebase Integration (Required for Firestore storage)
# ============================================================================

# Firebase Project ID (required)
FIREBASE_PROJECT_ID=

# For Node.js/local development: Path to service account JSON file
# Download from Firebase Console > Project Settings > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=

# For Cloudflare Workers/REST API mode: Firebase Web API Key
# Get from Firebase Console > Project Settings > General > Web API Key
FIREBASE_API_KEY=

# Basketball API (balldontlie.io - optional, ESPN used as fallback)
BASKETBALL_API_KEY=

# Football API (ESPN doesn't require key)
FOOTBALL_API_KEY=

# Soccer API (API-Football - optional for enhanced features)
SOCCER_API_KEY=

# Esports API (PandaScore - recommended for esports data)
ESPORTS_API_KEY=

# Betting Lines API (The Odds API - recommended)
ODDS_API_KEY=

# AI Integration (OpenAI - optional for enhanced reasoning)
OPENAI_API_KEY=

# Webhook URLs (optional - for notifications)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
